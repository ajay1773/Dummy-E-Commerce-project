<div class="row mt-5">
  <div class="col-md-6 m-auto">
    <div class="card card-body">
      <h1 class="text-center mb-3"> <i class="fas fa-address-card"></i>
        Register
      </h1>

      <% if(typeof errors !="undefined"){ %>
      <% errors.forEach(function(error) { %>
      <div class="alert alert-warning alert-dismissible fade show" role="alert">
        <%= error.msg %>
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <% }); %>

      <% } %>


      <form action="/Seller/Register" method="POST">
        <div class="form-group">
          <label for="name">Name</label>
          <input type="name" id="name" name="name" class="form-control" placeholder="Enter Name"
            value="<%= typeof name != 'undefined' ? name : '' %>" />
        </div>
        <div class="form-group">
          <label for="email">Email</label>
          <input type="email" id="email" name="email" class="form-control" placeholder="Enter Email"
            value="<%= typeof email != 'undefined' ? email : '' %>" />
        </div>
        <div class="form-group">
          <label for="password">Password</label>
          <input type="password" id="password" name="password" class="form-control" placeholder="Make a password"
            value="<%= typeof email != 'undefined' ? email : '' %>" />
        </div>

        <div class="form-group">
          <label for="contactno">Contact No:</label>
          <input type="number" id='contact' name="contact" class="form-control" placeholder="Contact No"
            value="<%= typeof password != 'undefined' ? password : '' %>" />
        </div>
        <div class="form-group">
          <label for="address">Pick up address</label>
          <input type="text" id="address" name="address" class="form-control" placeholder="Your address"
            value="<%= typeof password2 != 'undefined' ? password2 : '' %>" />
        </div>
        <div class="form-group">
          <label for="product">Type of product </label>
          <input type="text" id="product_type" name="product_type" class="form-control"
            placeholder="Type of your product" value="<%= typeof password2 != 'undefined' ? password2 : '' %>" />
        </div>
        <div class="form-group">
          <label for="details">Your buisness details</label>
          <input type="text" id="details" name="details" class="form-control" placeholder="Your buisness details"
            value="<%= typeof password2 != 'undefined' ? password2 : '' %>" />
        </div>
        <button type="submit" class="btn btn-primary btn-block">
          Register
        </button>
      </form>
      <p class="lead mt-4">Have An Account? <a href="/Seller">Login</a></p>
    </div>
  </div>
</div>